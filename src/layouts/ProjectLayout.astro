---
import '../styles/variables.css';
import '../styles/global.css';
import '../styles/components.css';

export interface Props {
  title: string;
  description?: string;
  projectTheme: 'yellow' | 'blue' | 'red';
}

const { title, description, projectTheme = 'yellow' } = Astro.props;

const themeColors = {
  yellow: {
    '--color-accent': '#F5CD4D',
    '--color-accent-hover': '#e8b92b',
  },
  blue: {
    '--color-accent': '#515BE5',
    '--color-accent-hover': '#3a44d9',
  },
  red: {
    '--color-accent': '#EB3132',
    '--color-accent-hover': '#d41a1b',
  }
}

const themeStyle = Object.entries(themeColors[projectTheme]).map(([key, value]) => `${key}: ${value}`).join(';');
---

<!DOCTYPE html>
<html lang="en" style={themeStyle}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
    
    <meta name="theme-color" content={themeColors[projectTheme]['--color-accent']} />
    <meta name="color-scheme" content="dark light" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <nav class="nav" id="nav">
      <div class="nav-brand">
        <a href="/" class="nav-logo">CR</a>
      </div>
      <ul class="nav-links">
        <li><a href="/#hero" class="nav-link" data-text="Home">Home</a></li>
        <li><a href="/#projects" class="nav-link" data-text="Projects">Projects</a></li>
        <li><a href="/#about" class="nav-link" data-text="About">About</a></li>
        <li><a href="/#contact" class="nav-link" data-text="Contact">Contact</a></li>
      </ul>
    </nav>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2025 Calder Robbins</p>
        <div class="footer-links">
          <a href="https://github.com/cnrobbins" target="_blank" rel="noopener">GitHub</a>
          <a href="https://www.linkedin.com/in/calder-robbins/" target="_blank" rel="noopener">LinkedIn</a>
          <a href="https://scholar.google.com/citations?user=EdbE5wwAAAAJ&hl=en" target="_blank" rel="noopener">Google Scholar</a>
          <a href="mailto:contact@robbins.cal@northeastern.edu">Email</a>
        </div>
      </div>
    </footer>
  </body>
</html> 